%script(type='text/javascript' src="#{ROOT}/jquery-1.5.min.js")

:javascript
  var small_dimensions = [#{SMALL_SIZE[0]}, #{SMALL_SIZE[1]}];
  var medium_dimensions = [#{MEDIUM_SIZE[0]}, #{MEDIUM_SIZE[1]}];
  var large_dimensions = [#{LARGE_SIZE[0]}, #{LARGE_SIZE[1]}];

  function basename(path) {
    return path.replace(/^.*[\/\\]/g, '');
  }

:css
  h1 { }
  h2 { }

  .photos a {
    text-decoration: none;
  }

  .photos img {
    border-color: black;
    border-style: solid;
    border-width: 1px;
    margin-right: 0.5em;
  }

  #footer {
    font-size: 75%;
  }

  #slideshow_background {
    z-index: -1;
    display: none;
    background: #ccc;
    opacity: 0.7;
    position: absolute;
    left: 0;
    top: 0;
  }

  #slideshow {
    z-index: 2;
    display: none;
    background: #000;
    padding: 50px;

    position: absolute;
    text-align: center;
  }

  #slideshow img {
   border: 1px solid gray;
  }

  #slideshow_close {
    position: absolute;
    right: 5px;
    top: 5px;
  }

  #slideshow_prev {
    position: absolute;
    left: 5px;
    bottom: 5px;
  }

  #slideshow_next {
    position: absolute;
    right: 5px;
    bottom: 5px;
  }
